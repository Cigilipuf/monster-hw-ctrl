[Unit]
Description=Monster TULPAR T5 Hardware Controller Daemon
After=multi-user.target graphical.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 -m src.main --daemon
WorkingDirectory=/opt/monster-hw-ctrl
Restart=on-failure
RestartSec=5
User=root

# GÃ¼venlik
ProtectSystem=false
ProtectHome=false
NoNewPrivileges=false

# Logging
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
